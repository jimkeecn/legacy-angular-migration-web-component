{
  "name": "web-components",
  "version": "1.0.0",
  "description": "Angular 20 Web Components Collection",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 4201 --public-host localhost:4201",
    "build": "ng build",
    "build:dev": "ng build --configuration development --output-path ../../dist/web-components",
    "build:watch": "ng build --watch --configuration development --output-path ../../dist/web-components",
    "serve:dist": "http-server ../../dist/web-components -p 4205 --cors",
    "build:elements": "ng build --configuration production --output-hashing none"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.0.0",
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/elements": "^20.0.0",
    "@angular/platform-browser": "^20.0.0",
    "@angular/platform-browser-dynamic": "^20.0.0",
    "ag-grid-angular": "^34.3.1",
    "ag-grid-community": "^34.3.1",
    "ng-zorro-antd": "^20.4.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.8.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.0.0",
    "@angular/cli": "^20.0.0",
    "@angular/compiler-cli": "^20.0.0",
    "@types/node": "^20.0.0",
    "http-server": "^14.1.1",
    "typescript": "~5.8.2"
  }
}
